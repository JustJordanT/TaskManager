@model TaskManament.Mvc.Models.Tenant

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <h4>Tenant</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <h2>Create Tenant</h2>

            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="TenantDescription" class="control-label"></label>
                    <input asp-for="TenantDescription" class="form-control" />
                    <span asp-validation-for="TenantDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
